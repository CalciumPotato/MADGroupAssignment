<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background_grey"
        android:padding="16dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ic_baseline_arrow_back_ios_new_24" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="198dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:text="Create Event" />

            <Button
                android:id="@+id/button2"
                android:layout_width="57dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/circle1"
                android:textColor="@color/white"
                android:text="Button" />

            <Button
                android:id="@+id/button3"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/circle1"
                android:textColor="@color/white"
                android:text="Button" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Event Name:"
                android:layout_gravity="center_vertical"
                android:drawableLeft="@drawable/eventicon"
                android:textColor="#EAD7FF"/>

            <EditText
                android:id="@+id/editTextEventName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Enter Name"
                android:lines="2"
                android:paddingLeft="20dp"
                android:background="@drawable/oval1"
                android:textColor="#FFFFFF"/>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Event Date:"
                android:layout_gravity="center_vertical"
                android:drawableLeft="@drawable/dateicon"
                android:textColor="#D7FBFF"/>

            <Button
                android:id="@+id/datePickerButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Date"
                android:onClick="showDatePickerDialog" />

            <TextView
                android:id="@+id/editTextEventDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:lines="2"
                android:textSize="15sp"
                android:textColor="#FFFFFF"/>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Event Venue:"
                android:layout_gravity="center_vertical"
                android:drawableLeft="@drawable/eventvenue"
                android:textColor="#FF9039"/>

            <EditText
                android:id="@+id/editTextEventVenue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Venue"
                android:paddingLeft="20dp"
                android:background="@drawable/oval1"
                android:lines="2"
                android:textColor="#FFFFFF"/>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Event Description:"
                android:layout_gravity="center_vertical"
                android:drawableLeft="@drawable/eventdescription"
                android:textColor="#28BFFF"/>

            <EditText
                android:id="@+id/editTextEventDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Description"
                android:inputType="textMultiLine"
                android:paddingLeft="20dp"
                android:background="@drawable/oval1"
                android:lines="3"
                android:textColor="#FFFFFF"/>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Event Fee:"
                android:layout_gravity="center_vertical"
                android:drawableLeft="@drawable/eventfee"
                android:textColor="#FFFC28"/>

            <EditText
                android:id="@+id/editTextEventFees"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Fees"
                android:paddingLeft="20dp"
                android:background="@drawable/oval1"
                android:lines="2"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!-- Label for image upload section -->

                <!-- Button to trigger image selection -->
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:text="Upload Images"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onSelectImagesButtonClick"
                    android:text="Select Images" />

            </LinearLayout>

            <ImageView
                android:id="@+id/ImageView"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp" />

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Event"
            android:layout_gravity="center"
            android:onClick="onCreateEventButtonClick" />

    </LinearLayout>

</ScrollView>